@using E_Market_.Net_Core.Models.DB_Classes;
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Id</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.CategoryId</td>
            <td>@category.CategoryName</td>
            <td>
                   <a asp-action="CategoryDelete" asp-route-id="@category.CategoryId" class="btn btn-danger">Delete</a>
            </td>
            <td>
                @using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
                {
                                    <input type="submit" asp-route-id="@category.CategoryId" value="Update" class="btn btn-primary" />
                }

                   @*<a asp-action="UpdateCategory" asp-route-id="@category.CategoryId" class="btn btn-success">Update</a>*@
            </td>
        </tr>
    }
    
   
</table>
